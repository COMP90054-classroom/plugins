{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PDDL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#scalars"
		},
		{
			"include": "#time-qualifiers"
		},
		{
			"include": "#parameters"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pddl",
				"match": "\\b(define|domain|problem|requirements)\\b|:[\\w-]+\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"match": ";.*$"
			}]
		},
		"scalars": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b[-+]?([0-9]*\\.[0-9]+|[0-9]+)\\b"
			}]
		},
		"time-qualifiers":{
			"patterns": [{
				"name": "keyword.operator.pddl_qualifier",
				"match": "\\b(and|not|at start|at end|over all|increase|decrease)\\b"
			}]
		},
		"parameters":{
			"patterns": [{
				"name": "variable.parameter",
				"match": "\\?\\w+\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pddl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pddl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pddl"
}
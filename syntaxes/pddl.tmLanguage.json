{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "PDDL",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#scalars"
		},
		{
			"include": "#time-qualifiers"
		},
		{
			"include": "#parameters"
		},
		{
			"include": "#unexpected"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pddl.header",
				"match": "\\b(define|domain|problem)\\b"
			},
			{
				"name": "keyword.control.pddl.global",
				"match": ":(requirements|types|constants|predicates|functions|action|durative-action|domain|objects|init|goal|metric)\\b"
			},
			{
				"name": "keyword.control.pddl.requirements",
				"match": ":(strips|fluents|durative-actions|timed-initial-literals|typing|conditional-effects|negative-preconditions|duration-inequalities)\\b"
			},
			{
				"name": "keyword.control.pddl.action",
				"match": ":(parameters|precondition|effect)\\b"
			},
			{
				"name": "keyword.control.pddl.action.durative",
				"match": ":(parameters|duration|condition|effect)\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"match": ";.*$"
			}]
		},
		"scalars": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b[-+]?([0-9]*\\.[0-9]+|[0-9]+)\\b"
			}]
		},
		"time-qualifiers":{
			"patterns": [{
				"name": "keyword.operator.pddl_qualifier",
				"match": "\\b(and|not|at start|at end|over all|increase|decrease|minimize)\\b"
			}]
		},
		"parameters":{
			"patterns": [{
				"name": "variable.parameter",
				"match": "\\?\\w+\\b"
			}]
		},
		"unexpected": {
			"patterns": [{
				"name": "invalid.illegal",
				"match": ":[\\w-]+\\b"
			}]
		}
	},
	"scopeName": "source.pddl"
}